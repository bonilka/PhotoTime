/***
    NAVBAR
***/
.navbar
    margin 0
    padding 0
    text-align center
    list-style none
    font-family fontBold
    font-size: em(16px);
    &--stick
        position fixed
        top 0
        left 0
        width 100%
        padding 0
        font-size: .8em
        background-color rgba(0, 0, 0, .5)
        z-index 20

    &__item
        display inline-block
        vertical-align middle
        margin-right: 10%
        text-transform uppercase
        transition all .5s
        &:last-child
            margin-right 0
        a
            &, &:active, &:visited
                text-decoration none
                color #fff

        &--logo
            position relative
            top em(-10px)
            a
                logoWhite = "img/logo--white.png"
                display block
                width em(image-size(logoWhite)[0])
                height em(image-size(logoWhite)[1])
                background url( (logoWhite) ) 50% 50% no-repeat
        &--hiden
            display none
        &--stick
            padding 1em 0
.navbar-button
    display none
    border-radius 5px
    padding .3em .3em .2em .3em
    background-color themeColor
    cursor pointer
    color #fff

@media screen and (max-width: lPoint)
    .navbar
        display none
        padding 0
        &--stick
            position relative
            font-size 1em
            background-color transparent
            widh auto
        &__item
            display block
            padding .6em 0
            margin 0
            &--logo
                display none


    .navbar-button
        display block
        position absolute
        top 1em
        right 1em
