.first-section
    position relative
    font-size 1em
    padding em(60px) 0 em(270px) 0
    background url("img/header-bg.jpg") 50% 50% no-repeat
    background-size cover

.slogan
    font-size 1em
    margin-top em(250px)
    text-align: center
    color: #fff
    &__header
        margin 0
        font-family fontBold
        font-size em(36px)
        text-transform uppercase
        text-align center
    &__subheader
        margin: 0 0 em(30px) 0
        font-family fontBook
        font-size: em(16px)
.social-bar
    position absolute
    bottom 0
    width 100%
    text-align center
    font-size 1.2em
    color #fff
    padding 1em 0
    &__link
        display inline-block
        padding: 0 .2em
        clearA(#fff)
