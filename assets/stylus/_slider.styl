.slider
    overflow hidden
    &__slides
        width: 9999px
    &__box
        max-width: em(448px)
        position relative
        display inline-block
        margin-right em(25px)
    &__scroll-conveyor
        display inline-block
    &__slide-count
        margin-top em(40px)
        //margin-left em(3.2px, .75*16)
        font .75em fontMedium
        line-height 2.5em
    &__controls
        &--left
            position relative
            left -.2em
            padding-bottom 10%
        &--right
            position relative
            right -.2em
            padding-bottom em(20px)
            text-align right
    &__control-left, &__control-right
        cursor pointer
