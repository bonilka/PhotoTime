                            .slider__controls.slider__controls--left
                                i.icon-left-open.slider__control-left
                                i.icon-right-open.slider__control-right
            section.row.fourth-section#fourth-section
                .row__l-3.row__l--offset-2
                    .community
                        img(src="css/img/logo--color.png").community__img
                        h4.community__header Our community
                        p.community__text Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                .row__l-12.row__l--offset-1
                    .slider
                        .slider__controls.slider__controls--right
                            i.icon-left-open.slider__control-left
                            i.icon-right-open.slider__control-right
                        .slider__slides
                            .slider__box
                                img.slider__img(src="img/pic-1.jpg")
                            .slider__box
                                img.slider__img(src="img/pic-2.jpg")
                            .slider__box
                                img.slider__img(src="img/pic-2.jpg")
            section.row.fifth-section#fifth-section
                form(action="#" method="POST").subscribe
                    h3.subscribe__header Subscribe to us community
                    span.subscribe__input
                        input(type="email" required )
                        label.subscribe__label Your email
                        button(type="submit").subscribe__submit: i.icon-ok
            section.row.sixy-section#sixy-section
                .download
                    h3.download__header Download it
                    p.download__text Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    .row    
                        a(href="").download__button.download__button--margin-right
                            span Apple store
                            i.icon-apple
                        a(href="").download__button
                            span Android store
                            i.icon-android
            footer.row.footer#footer
                .row__l-15.row__l--offset-2.row__m-15.row__m--offset-2.row__s-15.row__s--offset-2
                    ul.about
                        li.about__item
                            a(href="").about__link Credits
                        li.about__item
                            a(href="").about__link Privacy
                        li.about__item
                            a(href="").about__link Our teams
                    p.copyryght Copyryght by phototime - all right reserved
                .row__l-1.row__m-1.row__s-1
                    img(src="css/img/logo--color.png" alt="").logo--footer
