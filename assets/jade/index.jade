        meta(name="viewport" content="width=device-width, initial-scale=1")
        title Jade
        link(rel='stylesheet', href='css/style.css')
    body
        .container
            section.row
                .first-section#first-section
                    .navbar-button#navbar-button: i.icon-menu
                    nav.row
                        ul.navbar
                            li.navbar__item: a(href="#") Home
                            li.navbar__item: a(href="#") Photoapp
                            li.navbar__item.navbar__item--logo: a(href="#")
                            li.navbar__item: a(href="#") Design
                            li.navbar__item: a(href="#") Download
                    .row.slogan
                        h1.slogan__header Your life, a Photo
                        h2.slogan__subheader print your life in a simple photo
                        a.button(href="#") Get started
                    .social-bar
                        a(href="#").social-bar__link: i.icon-twitter
                        a(href="#").social-bar__link: i.icon-flickr
                        a(href="#").social-bar__link: i.icon-dribbble
            section.row.second-section#second-section
                    .row__l-5.row__l--offset-2.row__m-5.row__m--offset-2.row__s-20
